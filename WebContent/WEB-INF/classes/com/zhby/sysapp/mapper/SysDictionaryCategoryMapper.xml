<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhby.sysapp.mapper.SysDictionaryCategoryMapper">

	<resultMap type="SysDictionaryCategoryObj" id="resultMap">
		<id property="id" column="id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="remark" column="remark" />
	</resultMap>
	
	<resultMap type="SysDictionaryObj" id="detailsResultMap">
		<id property="id" column="id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="value" column="value" />
		<result property="remark" column="remark" />
		<result property="orderNum" column="order_num" />
	</resultMap>
		
	
	<sql id="table">
		tbl_sys_dictionary_category
	</sql>
	
	<sql id="columns">
		 id, code, name, remark
	</sql>
	
	<sql id="conditions">
		<where>
			<if test="id!=null">
				and id = #{id,jdbcType=NUMERIC}
			</if>
			<if test="code != null and code != ''">
				and code = #{code,jdbcType=VARCHAR}
			</if>
		</where>
	</sql>
	
	<select id="getById" parameterType="long" resultMap="resultMap">
		select <include refid="columns"/>  
		from <include refid="table"/> 
		where id = #{id,jdbcType=NUMERIC}
	</select>
	
	<select id="getByCode" parameterType="string" resultMap="resultMap">
		select <include refid="columns"/>  
		from <include refid="table"/> 
		where code = #{code}
	</select>
	
	<select id="checkCode" parameterType="string" resultType="int">
		select count(*) from 
		<include refid="table"/>
		where code = #{code, jdbcType=VARCHAR}
	</select>
	
	<select id="list" parameterType="SysDictionaryCategoryObj" resultMap="resultMap">
		select <include refid="columns"/>  
		from <include refid="table"/> 
		<include refid="conditions"/> 
	</select>
	
	<select id="edit" parameterType="SysDictionaryCategoryObj" resultMap="resultMap">
		select <include refid="columns"/>  
		from <include refid="table"/> 
		<include refid="conditions"/> 
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="SysDictionaryCategoryObj">
		insert into <include refid="table" /> (
			code, name, remark
		) values (
			#{code, jdbcType=VARCHAR}, 
			#{name, jdbcType=VARCHAR}, 
			#{remark,jdbcType=VARCHAR}
		)
	</insert>

	<update id="update" parameterType="SysDictionaryCategoryObj">
		update <include refid="table" />
		<set>
			<if test="name != null and name != ''">name = #{name, jdbcType=VARCHAR},</if>
			<if test="remark != null and remark != ''">remark = #{remark, jdbcType=VARCHAR},</if>
		</set>
		where id = #{id, jdbcType=NUMERIC}
	</update>

	<delete id="delete" parameterType="SysDictionaryCategoryObj">
		delete from <include refid="table" /> 
		<include refid="conditions"/> 
	</delete>
	
	<!-- 字典列表 -->
	<resultMap type="SysDictionaryObj" id="sysDictionaryResultMap">
		<id property="id" column="id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="value" column="value" />
		<result property="remark" column="remark" />
		<result property="orderNum" column="order_num" />
	</resultMap>	
	<select id="childs" parameterType="string" resultMap="sysDictionaryResultMap">
		select * from tbl_sys_dictionary where code = #{code, jdbcType=VARCHAR} order by order_num asc
	</select>
	
</mapper>















