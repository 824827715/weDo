<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhby.sysapp.mapper.SysOrgMapper">

	<resultMap type="SysOrgObj" id="resultMap">
		<id property="id" column="id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="status" column="status" />
		<result property="remark" column="remark" />
		<result property="creator" column="creator" />
		<result property="creationDate" column="creation_date" />
		<result property="modifier" column="modifier" />
		<result property="modificationDate" column="modification_date" />
	</resultMap>
	
	<select id="list" parameterType="hashmap" resultMap="resultMap">
		select * from tbl_sys_org
	</select>
	
	<select id="getByCode" parameterType="string" resultMap="resultMap">
		select * from tbl_sys_org 
		where code=#{code,jdbcType=VARCHAR}
	</select>
	
	<select id="checkCode" parameterType="string" resultType="int">
		select count(*) from tbl_sys_org 
		where code = #{code}
	</select>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="SysOrgObj">
		insert into tbl_sys_org (
			code, name, status, remark, creator, creation_date
		) values (
			#{code, jdbcType=VARCHAR}, 
			#{name, jdbcType=VARCHAR}, 
			#{status,jdbcType=VARCHAR}, 
			#{remark,jdbcType=VARCHAR}, 
			#{creator, jdbcType=VARCHAR}, 
			now()
		)
	</insert>
	
	<select id="edit" parameterType="string" resultMap="resultMap">
		select * from tbl_sys_org 
		where id=#{id,jdbcType=VARCHAR}
	</select>
	
	<update id="update" parameterType="SysOrgObj">
		update tbl_sys_org 
		<set>
			<if test="name != null and name != ''">name = #{name},</if>
			<if test="code != null and code != ''">code = #{code},</if>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="remark != null and remark != ''">remark = #{remark},</if>
			<if test="modifier != null and modifier != ''">modifier = #{modifier},</if>
			modification_date = now()
		</set>
		where id = #{id}
	</update>
	
	<delete id="delete" parameterType="hashmap">
		delete from tbl_sys_org where id = #{id}  
	</delete>
	
	<update id="changeStatus" parameterType="hashmap">
		update tbl_sys_org 
		<set>
			<if test="status != null and status != ''">status = #{status},</if>
			<if test="modifier != null and modifier != ''">modifier = #{modifier},</if>
			modification_date = now()
		</set>
		where id = #{id}
	</update>
</mapper>