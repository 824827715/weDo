<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zhby.sysapp.mapper.SysRoleMapper">

	<resultMap type="SysRoleObj" id="resultMap">
		<id property="id" column="id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="status" column="status" />
		<result property="remark" column="remark" />
		<result property="creator" column="creator" />
		<result property="creationDate" column="creation_date" />
		<result property="modifier" column="modifier" />
		<result property="modificationDate" column="modification_date" />
	</resultMap>
	
	<sql id="table">
		tbl_sys_role
	</sql>
	
	<sql id="columns">
		 id, code, name, status, remark, creator, creation_date, modifier, modification_date
	</sql>
	
	<sql id="conditions">
		<where>
			<if test="id!=null">
				and id = #{id,jdbcType=NUMERIC}
			</if>
			<if test="code != null and code != ''">
				and code = #{code,jdbcType=VARCHAR}
			</if>
		</where>
	</sql>
	
	<select id="getById" parameterType="long" resultMap="resultMap">
		select <include refid="columns"/>  
		from <include refid="table"/> 
		where id = #{id,jdbcType=NUMERIC}
	</select>
	
	<select id="getByCode" parameterType="string" resultMap="resultMap">
		select <include refid="columns"/>  
		from <include refid="table"/> 
		where code = #{code}
	</select>
	
	<select id="checkCode" parameterType="string" resultType="int">
		select count(*) from 
		<include refid="table"/>
		where code = #{code}
	</select>
	
	<select id="list" parameterType="SysRoleObj" resultMap="resultMap">
		select <include refid="columns"/>  
		from <include refid="table"/> 
		<include refid="conditions"/> 
	</select>
	
	<select id="edit" parameterType="SysRoleObj" resultMap="resultMap">
		select <include refid="columns"/>  
		from <include refid="table"/> 
		<include refid="conditions"/> 
	</select>

	<insert id="insert" useGeneratedKeys="true" keyProperty="id"  parameterType="SysRoleObj">
		insert into <include refid="table" /> (
			code, name, status, remark, creator, creation_date
		) values (
			#{code, jdbcType=VARCHAR}, 
			#{name, jdbcType=VARCHAR}, 
			#{status,jdbcType=VARCHAR}, 
			#{remark,jdbcType=VARCHAR}, 
			#{creator, jdbcType=VARCHAR}, 
			now()
		)
	</insert>

	<update id="update" parameterType="SysRoleObj">
		update <include refid="table" />
		<set>
			<if test="name != null and name != ''">name = #{name, jdbcType=VARCHAR},</if>
			<if test="status != null and status != ''">status = #{status, jdbcType=VARCHAR},</if>
			<if test="remark != null and remark != ''">remark = #{remark, jdbcType=VARCHAR},</if>
			<if test="modifier != null and modifier != ''">modifier = #{modifier, jdbcType=VARCHAR},</if>
			modification_date = now()
		</set>
		where id = #{id, jdbcType=NUMERIC}
	</update>

	<delete id="delete" parameterType="SysRoleObj">
		delete from <include refid="table" /> 
		<include refid="conditions"/> 
	</delete>
	
	<resultMap type="hashmap" id="simpleResultMap">
		<id property="id" column="id" />
		<result property="code" column="code" />
		<result property="name" column="name" />
		<result property="isChecked" column="is_checked" />
	</resultMap>	
	<select id="listByUserId" parameterType="Long" resultMap="simpleResultMap">
		select 
			r.id,r.code,r.name,(case when r.id=ur.role_id then 'true' else 'false' end) as is_checked
		from tbl_sys_role r left join (select role_id from tbl_sys_user_role t where t.user_id=#{userId}) ur on r.id = ur.role_id
	</select>	
</mapper>